      <div class="signup-classic">
     
        <form class="signup-form" action="/signup" method="POST">
          
          <fieldset class="signup-fieldset signup-email">
            <input type="email" name="email" style="text-align: right;" placeholder="الايميل" value="<%= typeof email !== 'undefined' ? email : '' %>" />
          </fieldset>
          <fieldset class="signup-fieldset signup-password">
            <input type="password" name="password" style="text-align: right;" placeholder="الرقم السري" />
          </fieldset>
          <button type="submit" class="signup-btn">تسجيل الدخول</button>
          <a href="/auth/google" class="signup-btn signup-btn-social signup-btn-google"><i class="fa fa-google"></i>تسجيل الدخول بقوقل</a>
        </form>
      </div>
    </div>
  </div>
  